<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.vcss_c"/>
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css"/>
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/api.js"/>
		<include src="file://{resources}/scripts/custom_game/custom_loading_screen.js"/>
	</scripts>

	<Panel class="addon-root">
		<Panel id="imba-loading">
			<Panel id="imba-loading-title">
				<Panel class="down">
					<Label id="loading-title-text" text="Dota IMBA 42.0 - Leaked EarthSalamander sextape"/>
					<Label id="loading-map-text" text="Loading ..."/>
					<Label id="loading-content-text" html="true" text="Loading ..." />
					<Button id="loading-link" onactivate="DOTADisplayURL('http://www.dota2imba.fr/home');">
						<Label id="loading-link-text" text="Loading ..." />
					</Button>
				</Panel>
			</Panel>

			<Panel id="TopButtonBar" class="LoadingButtons">
				<Panel class="Row">
					<Button id="ImbaLoadingSocialOfficialWebsite" class="SocialButtons" onactivate="DOTADisplayURL('http://dota2imba.fr/ranking');">
						<Label text="Official Website" />
					</Button>
					<Button id="ImbaLoadingSocialSteamWorkshop" class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://steamcommunity.com/id/DendiR/myworkshopfiles/');">
						<Label text="Frostrose Workshop" />
					</Button>
					<!-- <Button id="ImbaLoadingSocialSteamChat" class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://s.team/chat/OgFfP2Rx');"> -->
						<!-- <Label text="Official Steam Chat" /> -->
					<!-- </Button> -->
					<Button id="ImbaLoadingSocialFacebook" class="SocialButtons" onactivate="DOTADisplayURL('https://www.facebook.com/D2IMBA/');">
						<Label text="Facebook" />
					</Button>
					<Button id="ImbaLoadingSocialTwitter" class="SocialButtons" onactivate="DOTADisplayURL('https://twitter.com/dota2imba');">
						<Label text="Twitter" />
					</Button>
					<Button id="ImbaLoadingSocialReddit" class="SocialButtons" onactivate="DOTADisplayURL('https://www.reddit.com/r/dotaimba/');">
						<Label text="Reddit" />
					</Button>
					<Button id="ImbaLoadingSocialDiscordEn" class="SocialButtons" onactivate="DOTADisplayURL('http://tinyurl.com/imba-discord');">
						<Label text="Discord" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="imba-loading-title-vote">
				<Panel class="down">
					<Label id="loading-title-text-vote" text="#vote_gamemode"/>
					<Panel id="vote-content">
						<Panel class="VoteButton" hittest="false">
							<RadioButton id="VoteGameMode1" class="CGSRadio" group="GameLength" onactivate="OnVoteButtonPressed('gamemode', 1)" />
							<Label id="VoteGameModeText1" class="VoteGameModeText" text="#vote_gamemode_1" />
						</Panel>
						<Panel class="VoteButton" hittest="false">
							<RadioButton id="VoteGameMode2" class="CGSRadio" group="GameLength" onactivate="OnVoteButtonPressed('gamemode', 2)" />
							<Label id="VoteGameModeText2" class="VoteGameModeText" text="#vote_gamemode_2" />
						</Panel>
						<Panel class="VoteButton" hittest="false">
							<RadioButton id="VoteGameMode3" class="CGSRadio" group="GameLength" onactivate="OnVoteButtonPressed('gamemode', 3)" />
							<Label id="VoteGameModeText3" class="VoteGameModeText" text="#vote_gamemode_3" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>

			<Panel id="imba-loading-title-promote">
				<Panel class="down">
					<Label id="loading-title-text-promote" text="#loading_screen_promote"/>
					<Label id="loading-content-text-promote" html="true" text="#loading_screen_promote_description" />
					<Button id="loading-link-promote" onactivate="DOTADisplayURL('https://www.transifex.com/frostrose-studio/dota-imba/dashboard/');">
						<Label id="loading-link-text-promote" text="#loading_screen_promote_button" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="imba-loading-title-patreon" class="loading-title">
				<Panel class="down">
					<Label id="loading-title-text-patreon" text="#loading_screen_patreon"/>
					<Label class="loading-content-text-patreon" html="true" text="#loading_screen_patreon_description" />
					<Button id="loading-link-patreon" onactivate="DOTADisplayURL('https://www.patreon.com/bePatron?u=2533325');">
					</Button>
					<Label class="loading-content-text-patreon" html="true" text="#loading_screen_patreon_description_bottom" />
				</Panel>
			</Panel>

			<Panel id="BottomButtonBar" class="LoadingButtons">
				<Panel class="Row">
					<Button class="SocialButtons DarkBlue">
						<Label text="#loading_screen_patreon_modlist1" />
					</Button>
					<Button class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=1350425247');">
						<Label text="#loading_screen_patreon_modlist2" />
					</Button>
					<Button class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=536682348');">
						<Label text="#loading_screen_patreon_modlist3" />
					</Button>
					<Button class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=296831818');">
						<Label text="#loading_screen_patreon_modlist4" />
					</Button>
					<Button class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=492195751');">
						<Label text="#loading_screen_patreon_modlist5" />
					</Button>
					<Button class="SocialButtons DarkBlue" onactivate="DOTADisplayURL('https://steamcommunity.com/sharedfiles/filedetails/?id=544075277');">
						<Label text="#loading_screen_patreon_modlist6" />
					</Button>
				</Panel>
			</Panel>
<!--
			<Panel id="imba-loading-title-promote">
				<Panel class="down">
					<Label id="loading-title-text-promote" text="X Hero Siege now have an experience system!"/>
					<Label id="loading-content-text-promote" html="true" text="You can now earn experience when playing X Hero Siege! A custom battlepass will be implented soon to unlock cosmetics." />
					<Button id="loading-link-promote" onactivate="DOTADisplayURL('https://www.facebook.com/D2IMBA/');">
						<Label id="loading-link-text-promote" text="Click here to download X Hero Siege!" />
					</Button>
				</Panel>
			</Panel>
-->
		</Panel>
	</Panel>
</root>
